{% macro navCreate(pageIndex) %}
  {% set pageArr = [
    { href: '/', label: '首页' },
    { href: '/games', label: '游戏中心' },
    { href: '/news', label: '新闻资讯' },
    { href: '/platfrom', label: '平台介绍' },
    { href: '/contact', label: '联系我们' }
    ]
  %}
  <nav class="vv_nav">
    {% for page in pageArr %}
      <a class="{{ 'active' if loop.index === pageIndex }}"  href="{{ page.href }}">{{ page.label }}</a>
    {% endfor %}
  </nav>
{% endmacro %}
