{% extends "layout/template.nj" %}

{% block css %}
  <link rel="stylesheet" href="/public/css/game.css">
{% endblock %}

{% block nav %}
{% call navCreate(2) %}
{{ caller() }}
{% endcall %}
{% endblock %}

{% block main %}
<section class="game_container">
	<h2 class="vv_news_title">游戏中心</h2>
	{# <div class="vv_news_tip">了解新闻资讯，时刻掌握游戏动态，实时更新业内最新新闻和资讯</div> #}
	<div class="vv_newsList_container">
		{% for game in gameList %}
			<div class="game_gameItem">
				<img
						class="game_img"
						src="{{ httpConfig.webServerPath + game.gameIcon }}"
				/>
				<section class="vv_newsInfo">
						<div class="vv_newsItem_title">{{ game.gameName }}</div>
						<div class="vv_news_content">{{ game.gameBrief }}</div>
						<a href="/games/{{game.gameId}}" class="vv_news_rightTip">查看游戏&gt;&gt;</a>
				</section>
			</div>
		{% endfor %}
	</div>
{% endblock %}
