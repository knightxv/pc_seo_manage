{% extends "layout/template.nj" %}
{% import "component/index.nj" as component %}

{% block css %}
<link rel="stylesheet" href="{{ static }}/css/news.css">
{% endblock %}

{% set breadArr = [
	{label: '首页', href: '/'},
	{label: '新闻资讯', href: '/news'},
	{label: '新闻详情', href: ''}
	]
%}

{% block main %}
{{ component.headBanner(3) }}
{{ component.BannerImg(static + "/images/banner.jpg") }}
{{ component.Breadcrumb(breadArr) }}
<div class="container">
	{# <div class="col-md-3">
		<div class="m_module">
			{{ component.Title('新闻公告') }}
			{{ component.SideSelect() }}
		</div>
		<div class="m_module">
			{{ component.Title('新闻公告') }}
			{{ component.NewsSide() }}
		</div>
	</div> #}
	<section class="col-md-12 m_module newDetail_container">
		<div class="newsDetail_title">{{ news.newsTitle }}</div>
		<div class="newDetail_time">{{ news.publicTime }}</div>
		<div class="newDetail_content">
			{{ news.newsContent | safe }}
		</div>
		<div class="newsDetail_pageLink_wrap">
			{% if beforeNews %}
				<a href="/news/newsDetail/{{ beforeNews.newsId }}" class="newDetail_pageLink">上一篇：{{ beforeNews.newsTitle }}</a>
			{% endif %}
			{% if nextNews %}
				<a href="/news/newsDetail/{{ nextNews.newsId }}" class="newDetail_pageLink">下一篇：{{ nextNews.newsTitle }}</a>
			{% endif %}
		</div>
	</section>
</div>
{% endblock %}